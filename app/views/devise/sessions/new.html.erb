<div class="form-container">
  <div class="form-box">
    <h2 class="form-heading">Login</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "form-control custom-input", autocomplete: "email", placeholder: "Email" } %>
      </div>

      <div class="form-inputs">
        <%= f.input :password,
                    required: false,
                    input_html: { class: "form-control custom-input", autocomplete: "current-password", placeholder: "Password" } %>
      </div>

      <div class="checkbox mb-3">
        <%= f.input :remember_me, as: :boolean, input_html: { class: "remember-me-checkbox" } if devise_mapping.rememberable? %>
      </div>
      
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
